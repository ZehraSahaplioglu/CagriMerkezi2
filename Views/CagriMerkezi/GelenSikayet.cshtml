<!DOCTYPE html>

@model List<CagriMerkezi>

<div class="container">

    <div class="row pt-3 pb-4">

        <div>

            <h1>Çağrı Merkezine Gelen Şikayetler</h1>
            <hr />

        </div>

    </div>

    <style>
        html, body {
            overflow-y: auto; /* or overflow: auto; */
        }
    </style>

    <table class="table table-bordered">

        <thead>

            <tr>
                <th> </th>
                <th>Id</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>TC</th>
                <th>Adres</th>
                <th>Tel No</th>
                <th>Açıklama</th>
                <th>Sorgulama Kodu</th>
                <th>Durum</th>
                <th>Sorumlu Birim</th>
                <th>Sorumlu Departman</th>
                <th> </th>
                <th> </th>

            </tr>

        </thead>

        <tbody>

            @foreach (var cagriMerkezi in Model)
            {
                <tr>
                    <td>
                        @if (cagriMerkezi.ResimUrl != null)
                        {
                            <img src="@cagriMerkezi.ResimUrl" style="border-radius: 7px; border 1px; solid #bbb9b9;
                            max-width: 145px; max: 275px" />
                        }
                        else
                        {
                            <span> </span>
                        }
                    </td>
                    <td>@cagriMerkezi.Id</td>
                    <td>@cagriMerkezi.Ad</td>
                    <td>@cagriMerkezi.Soyad</td>
                    <td>@cagriMerkezi.TC</td>
                    <td>@cagriMerkezi.Adres</td>
                    <td>@cagriMerkezi.TelNo</td>
                    <td>@cagriMerkezi.Aciklama</td>
                    <td>@cagriMerkezi.BasvuruKodu</td>
                    <td>
                        @if (cagriMerkezi.SikayetDurum != null)
                        {
                            @cagriMerkezi.SikayetDurum.Ad
                        }
                        else
                        {
                            <span>Durum bilgisi bulunamadı</span>
                        }
                    </td>
                    <td>
                        @if (cagriMerkezi.Birim != null)
                        {
                            @cagriMerkezi.Birim.Ad
                        }
                        else
                        {
                            <span>Birim bilgisi bulunamadı</span>
                        }
                    </td>
                    <td>
                        @if (cagriMerkezi.Departman != null)
                        {
                            @cagriMerkezi.Departman.Ad
                        }
                        else
                        {
                            <span>Departman bilgisi bulunamadı</span>
                        }
                    </td>

                    <td>
                        <a asp-controller="CagriMerkezi" asp-action="EkleGuncelle" asp-route-id="@cagriMerkezi.Id" type="button"
                           class="btn btn-success" style="width:100px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="CagriMerkezi" asp-action="Sil" asp-route-id="@cagriMerkezi.Id" type="button"
                           class="btn btn-danger" style="width:100px">Sil</a>
                    </td>

                </tr>
            }

        </tbody>

    </table>

</div>

</html>
