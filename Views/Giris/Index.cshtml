<!DOCTYPE html>
<html lang="tr">

<head>
    <!-- Başlık içeriğinizi buraya ekleyin -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Font Awesome ikonları için kütüphane bağlantısı -->
</head>

<body>

    <style>
        /* Kare şeklinde butonlar için özel sınıf */
        .kare-buton {
            width: 150px; /* Sabit bir genişlik belirleyin */
            height: 100px; /* Sabit bir yükseklik belirleyin */
            border-radius: 10; 
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .kare-buton i {
                margin-bottom: 10px;
            }
    </style>

    <div class="container">

        <div class="row mt-3 mb-2">
            <div class="col">
                <h1>Çağrı Merkezi Sayfası</h1>
                <hr />
            </div>
        </div>

        <div class="row mt-3">

            @if ((string)ViewBag.Yetki == "admin")
            {
                <div class="col-md-2">
                    <a asp-controller="Birim" asp-action="Index" class="btn btn-primary btn-block kare-buton">
                        <i class="fas fa-building"></i> Birim ->
                    </a>
                </div>

                <div class="col-md-2">
                    <a asp-controller="Departman" asp-action="Index" class="btn btn-success btn-block kare-buton">
                        <i class="fas fa-users"></i> Departman ->
                    </a>
                </div>
            }

            <div class="col-md-2">
                <a asp-controller="Calisan" asp-action="Index" class="btn btn-primary btn-block kare-buton">
                    <i class="fas fa-user"></i> Çalışan ->
                </a>
            </div>

            @if ((string)ViewBag.Yetki == "admin")
            {
                <div class="col-md-2">
                    <a asp-controller="Kullanici" asp-action="Index" class="btn btn-succes btn-block kare-buton">
                        <i class="fas fa-user"></i> Kullanıcı ->
                    </a>
                </div>
            }

        </div>

        <div class="row mt-3">

            <div class="col-md-2">
                <a asp-controller="Sikayet" asp-action="Index" class="btn btn-primary btn-block kare-buton">
                    <i class="fas fa-exclamation-triangle"></i> Şikayetler ->
                </a>
            </div>

            @if ((string)ViewBag.Yetki == "admin")
            {
                <div class="col-md-2">
                    <a asp-controller="SikayetDurum" asp-action="Index" class="btn btn-success btn-block kare-buton">
                        <i class="fas fa-chart-bar"></i> Şikayet Durum ->
                    </a>
                </div>
            }

            <div class="col-md-2">
                <a asp-controller="CagriMerkezi" asp-action="Index" class="btn btn-primary btn-block kare-buton">
                    <i class="fas fa-phone"></i> Çağrı Merkezi ->
                </a>
            </div>

        </div>

    </div>

</body>

</html>