@model Calisan

<form method="post">

    <div class="border p-3 mt-5">

        <div class="row pb-3">

            <h2 class="text-primary">Çalışan Sil</h2>
            <hr />

        </div>

        <div class="mb-3">

            <label asp-for="Ad" class="p-0"></label>
            <input asp-for="Ad" disabled class="form-control" />

        </div>

        <div class="mb-3">

            <label asp-for="Soyad" class="p-0"></label>
            <input asp-for="Soyad" disabled class="form-control" />

        </div>

        <div class="mb-3">

            <label asp-for="TC" class="p-0"></label>
            <input asp-for="TC" disabled class="form-control" />

        </div>

        <div class="mb-3">

            <label asp-for="Adres" class="p-0"></label>
            <input asp-for="Adres" disabled class="form-control" />

        </div>

        <div class="mb-3">

            <label asp-for="Mail" class="p-0"></label>
            <input asp-for="Mail" disabled class="form-control" />

        </div>

        <div class="mb-3">

            <label asp-for="TelNo" class="p-0"></label>
            <input asp-for="TelNo" disabled class="form-control" />

        </div>


        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Sil</button>

        <a asp-controller="Calisan" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Geri Dön</a>

    </div>

</form>
